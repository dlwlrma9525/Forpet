<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/marker_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_marker"
        android:minWidth="87dp"
        android:minHeight="30dp"
        android:paddingStart="8dp"
        android:paddingEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_marker"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp" />

        <TextView
            android:id="@+id/text_marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nanum_square"
            android:includeFontPadding="false"
            android:textColor="#272727"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/image_ci"
            app:layout_constraintStart_toStartOf="@+id/image_ci"
            app:layout_constraintTop_toBottomOf="@+id/image_ci" />
    </LinearLayout>

    <ImageView
        android:id="@+id/marker_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/marker_bottom"
        app:layout_constraintEnd_toEndOf="@+id/marker_top"
        app:layout_constraintStart_toStartOf="@+id/marker_top"
        app:layout_constraintTop_toBottomOf="@+id/marker_top" />

</androidx.constraintlayout.widget.ConstraintLayout>