<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/image_nav_picture"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/bg_oval_gray"
        android:contentDescription="@string/nav_header_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_nav_close"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/icon_close_x"
        android:contentDescription="@string/nav_header_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_nav_pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nanum_square"
        android:includeFontPadding="false"
        android:text="@string/dummy_pet"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/image_nav_picture"
        app:layout_constraintTop_toTopOf="@+id/image_nav_picture" />

    <TextView
        android:id="@+id/text_nav_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_square"
        android:includeFontPadding="false"
        android:lineSpacingExtra="4sp"
        android:text="@string/dummy_birth"
        android:textColor="#4b4b4b"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/text_nav_pet"
        app:layout_constraintTop_toBottomOf="@+id/text_nav_pet" />

    <TextView
        android:id="@+id/text_nav_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_square"
        android:includeFontPadding="false"
        android:lineSpacingExtra="4sp"
        android:text="@string/dummy_weight"
        android:textColor="#4b4b4b"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/text_nav_birth"
        app:layout_constraintTop_toBottomOf="@+id/text_nav_birth" />


    <ImageView
        android:id="@+id/image_nav_favor"
        android:layout_width="12dp"
        android:layout_height="18dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/icon_favorite"
        android:contentDescription="@string/nav_header_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_nav_picture" />

    <TextView
        android:id="@+id/text_nav_favor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/nanum_square"
        android:includeFontPadding="false"
        android:text="@string/nav_favor"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/image_nav_favor"
        app:layout_constraintTop_toTopOf="@+id/image_nav_favor" />

    <ListView
        android:id="@+id/list_view_favor"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/text_nav_favor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/list_view_favor">

        <Button
            android:id="@+id/button_hosp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_rect_white"
            android:drawableStart="@drawable/icon_hospital"
            android:drawableEnd="@drawable/arrow_right"
            android:drawablePadding="14dp"
            android:gravity="start|center"
            android:paddingStart="16dp"
            android:paddingEnd="20dp"
            android:text="@string/nav_hosp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_place"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_rect_white"
            android:drawableStart="@drawable/icon_ani_shop"
            android:drawableEnd="@drawable/arrow_right"
            android:drawablePadding="14dp"
            android:gravity="start|center"
            android:paddingStart="16dp"
            android:paddingEnd="20dp"
            android:text="@string/nav_place"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_advertisement"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_rect_white"
            android:drawableStart="@drawable/icon_event"
            android:drawableEnd="@drawable/arrow_right"
            android:drawablePadding="14dp"
            android:gravity="start|center"
            android:paddingStart="16dp"
            android:paddingEnd="20dp"
            android:text="@string/nav_advertisement"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>