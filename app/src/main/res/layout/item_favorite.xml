<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="13dp"
    android:paddingEnd="13dp">

    <ImageView
        android:id="@+id/image_favor_logo"
        android:layout_width="16dp"
        android:layout_height="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_favor_name"
        style="@style/NanumSquareStyle"
        android:layout_marginStart="12dp"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/image_favor_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_favor_description"
        style="@style/NanumSquareStyle"
        android:layout_marginTop="1dp"
        android:textColor="#8f8f8f"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/text_favor_name"
        app:layout_constraintTop_toBottomOf="@+id/text_favor_name" />

</androidx.constraintlayout.widget.ConstraintLayout>