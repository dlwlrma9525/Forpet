<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_opt"
        android:layout_width="21dp"
        android:layout_height="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_opt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/nanum_square"
        android:includeFontPadding="false"
        android:textColor="#393939"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_opt"
        app:layout_constraintStart_toEndOf="@+id/image_opt"
        app:layout_constraintTop_toTopOf="@+id/image_opt" />

</androidx.constraintlayout.widget.ConstraintLayout>