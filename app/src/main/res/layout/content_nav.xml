<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/background_oval_gray"
        android:contentDescription="@string/nav_header_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/image_button_close"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/icon_close_x"
        android:contentDescription="@string/nav_header_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="16dp"
        android:drawableEnd="@drawable/login"
        android:drawablePadding="3dp"
        android:fontFamily="@font/nanum_square"
        android:includeFontPadding="false"
        android:text="@string/nav_login"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/image_profile"
        app:layout_constraintTop_toTopOf="@+id/image_profile" />

    <TextView
        android:id="@+id/text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_square"
        android:includeFontPadding="false"
        android:lineSpacingExtra="4sp"
        android:text="@string/dummy_email"
        android:textColor="#4b4b4b"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/text_login"
        app:layout_constraintTop_toBottomOf="@+id/text_login" />

    <ImageView
        android:id="@+id/image_favorite"
        android:layout_width="12dp"
        android:layout_height="18dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/icon_favorite"
        android:contentDescription="@string/nav_header_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_profile" />

    <TextView
        android:id="@+id/header_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/nanum_square"
        android:includeFontPadding="false"
        android:text="@string/nav_favorite"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/image_favorite"
        app:layout_constraintTop_toTopOf="@+id/image_favorite" />

    <ListView
        android:id="@+id/list_favorite"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/header_favorite" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/list_favorite">

        <Button
            android:id="@+id/button_register_hosp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_rect_white"
            android:drawableStart="@drawable/icon_hospital"
            android:drawableEnd="@drawable/arrow_right"
            android:drawablePadding="14dp"
            android:gravity="start|center"
            android:paddingStart="16dp"
            android:paddingEnd="20dp"
            android:text="@string/nav_register_hosp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_register_pharm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_rect_white"
            android:drawableStart="@drawable/icon_pharm"
            android:drawableEnd="@drawable/arrow_right"
            android:drawablePadding="14dp"
            android:gravity="start|center"
            android:paddingStart="16dp"
            android:paddingEnd="20dp"
            android:text="@string/nav_register_pharm"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_register_shop"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_rect_white"
            android:drawableStart="@drawable/icon_ani_shop"
            android:drawableEnd="@drawable/arrow_right"
            android:drawablePadding="14dp"
            android:gravity="start|center"
            android:paddingStart="16dp"
            android:paddingEnd="20dp"
            android:text="@string/nav_register_shop"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_register_event"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_rect_white"
            android:drawableStart="@drawable/icon_event"
            android:drawableEnd="@drawable/arrow_right"
            android:drawablePadding="14dp"
            android:gravity="start|center"
            android:paddingStart="16dp"
            android:paddingEnd="20dp"
            android:text="@string/nav_register_event"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/button_logout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff6586"
        android:drawableStart="@drawable/logout"
        android:drawablePadding="11.6dp"
        android:drawableTint="@android:color/white"
        android:gravity="start|center"
        android:paddingStart="19dp"
        android:paddingEnd="0dp"
        android:text="@string/nav_logout"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
